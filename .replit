modules = ["nodejs-20", "java-17", "python-3.11", "postgresql-16", "openjdk-21"]

[nix]
channel = "stable-24_05"
packages = ["jq", "maven", "sqlite", "jdk", "openjdk", "wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FHIRHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitCommands"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SwaggerGenerator"

[[workflows.workflow]]
name = "FHIRHub"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"export PORT=5000 && node app.js\""
waitForPort = 5000

[[workflows.workflow]]
name = "GitCommands"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"sleep infinity\""

[[workflows.workflow]]
name = "SwaggerGenerator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/swagger-generator.js"

[deployment]
run = ["sh", "-c", "cd backend && npm install express cors uuid hapi-fhir && cd ../frontend && npm install react react-dom && cd .. && node backend/server.js"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 33787
externalPort = 3001

[[ports]]
localPort = 39635
externalPort = 3000
